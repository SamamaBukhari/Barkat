<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:id="@+id/rootThirdPage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    >

    <TextView
        android:id="@+id/ivSecondImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="DONATE"
        android:textStyle="bold"
        android:textSize="106sp"
        android:textColor="@android:color/black"

        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="16%"/>

    <TextView
        android:id="@+id/ivFirstImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="TO"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"

        app:layout_marginTopPercent="40%"
        app:layout_marginLeftPercent="6%"
        />

    <ImageView
        android:id="@+id/ivThirdImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/no_kid_hungry_white"
        android:paddingLeft="50dp"

        app:layout_heightPercent="40%"
        app:layout_marginTopPercent="27%"
        app:layout_widthPercent="100%"/>


    <TextView
        android:id="@+id/ivFourthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="MAKE"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="48%"
        />

    <TextView
        android:id="@+id/ivSixthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="DIFFERENCE"
        android:textSize="71sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"

        android:layout_below="@id/ivThirdImage"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/ivSeventhImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="A"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_centerVertical="true"

        app:layout_marginRightPercent="10%"/>

    <ImageView
        android:id="@+id/ivFifthImage"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        app:layout_heightPercent="10%"
        app:layout_marginLeftPercent="77%"
        app:layout_marginTopPercent="30%"
        app:layout_widthPercent="15%"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:gravity="center"

        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"

        app:layout_heightPercent="15%"
        app:layout_marginBottomPercent="11%"
        app:layout_widthPercent="45%"/>
</android.support.percent.PercentRelativeLayout>